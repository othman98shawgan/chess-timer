    <ImageButton
        android:id="@+id/button_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="11dp"
        android:background="@drawable/pause_icon"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/button_reset"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/button_pause"
        android:layout_centerInParent="true"
        android:layout_marginLeft="48dp"
        android:background="@drawable/reset_icon"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/button_edit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="48dp"
        android:layout_toLeftOf="@+id/button_pause"
        android:background="@drawable/settigns_icon"
        android:text="Edit"
        android:textSize="10sp"
        android:visibility="visible"
        tools:visibility="invisible" />


    <ImageButton
        android:id="@+id/button_done"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="48dp"
        android:layout_toLeftOf="@+id/button_pause"
        android:background="@drawable/done_icon"
        android:text="Edit"
        android:textSize="10sp"
        android:visibility="invisible"
        tools:visibility="visible" />






    <TextView
        android:id="@+id/text_view_countdown2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_pause"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoSizeMaxTextSize="150sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@color/color3"
        android:gravity="center"
        android:rotationX="180"
        android:rotationY="180"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="100sp"
        android:visibility="visible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_pause"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoSizeMaxTextSize="150sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@color/color3"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="100sp"
        android:visibility="visible"
        tools:visibility="invisible" />

    <EditText
        android:id="@+id/text_edit_countdown2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_pause"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoSizeMaxTextSize="150sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@color/color3"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="136sp"
        android:visibility="invisible"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/text_edit_countdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_reset"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:autoSizeMaxTextSize="150sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@color/color3"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="136sp"

        android:visibility="invisible"
        tools:visibility="visible" />


</RelativeLayout>